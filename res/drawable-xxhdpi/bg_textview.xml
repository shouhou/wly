<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#449def" />

            <stroke
                android:width="1dp"
                android:color="#2f6699" />

            <corners android:radius="0dp" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
        
    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#ffffff"
                android:startColor="#ffffff" />

            <stroke
                android:width="1dp"
                android:color="#2f6699" />

            <corners android:radius="0dp" />

            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>

</shape>